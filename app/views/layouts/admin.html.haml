!!! XML
!!!
%html{ html_attrs }
  %head
    %meta{ 'http-equiv' => "Content-type", :content => "text/html; charset=utf-8" }
    %title Getting somewhere

    = stylesheet_link_tag 'application'
    = javascript_include_tag 'prototype', 'effects', 'dragdrop', 'lowpro', 'dialog', 'application'

    = yield :head

  %body
    #banner
      #left-banner
      #flash-area
        #flash-errors{ :style => "display: none;" }= flash[:error]
        #flash-notice{ :style => "display: none;" }= flash[:notice]
      #right-banner
        = link_to 'Site', home_path, :target => '_blank'
        |
        = link_to 'Logout', admin_session_path, :method => :delete
    #wrapper
      #content
        #head
          %h1= @site.title unless @site.nil?
        %ul#top-controls
          %li= link_to 'Dashboard', dashboard_path, :class => check_active_section('dashboard')
          %li= link_to 'Links', admin_links_path, :class => check_active_section('links')
          %li= link_to 'News', admin_news_items_path, :class => check_active_section('news_items')
          %li= link_to 'Portfolios', admin_portfolios_path, :class => check_active_section('portfolios')
          %li= link_to assets_name, admin_assets_path, :class => check_active_section('assets')
          %li= link_to 'Design', admin_themes_path, :class => check_active_section('themes')
          %li= link_to 'Contacts', admin_contacts_path, :class => check_active_section('contacts')
          %li= link_to 'Settings', edit_admin_settings_path, :class => check_active_section('settings')
        #body
          #main
            #main-content
              = yield
          #sidebar
            = yield :sidebar
    #footer
