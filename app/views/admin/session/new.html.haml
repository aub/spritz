#login-form
  %h1
    = link_to 'http://www.spritzrelax.com', 'http://www.spritzrelax.com', :title => 'Powered by Spritz'
  - form_tag admin_session_path do
    %dl
      %div.session-flash= flash[:session]
      %dt
        %label{ :for => "login" } Login
      %dd= text_field_tag :login, params[:login], :class => 'large'

      %dt
        %label{ :for => "password" } Password
      %dd
        = password_field_tag :password, nil, :class => 'large'

      %dt.reset-password= link_to 'reset password', forgot_password_admin_users_path

    %dt.remember-me
      %label{ :for => "remember_me" } Remember me:
      = check_box_tag 'remember_me'

    %dt.submit= submit_tag 'Log in'