.box
  .boxheader
    %span.header Links
    = link_to add_icon, new_admin_link_path
  %table.draglist{ :cellpadding => 0, :cellspacing => 0 }
    %tbody#linklist
      - @links.each do |link|
        %tr{ :id => "#{dom_id(link)}" }
          %td.small 
            = image_tag('/images/icons/up-down.gif', :class => 'icon orange handle')
          %td.title= link_to link.title, edit_admin_link_path(link)
          %td.controls= link_to image_tag('/images/icons/trash.gif', :class => 'icon red', :title => 'Delete this link'), admin_link_path(link), :confirm => 'Are you sure you want to permanently delete this link?', :method => :delete
    
      - if @links.empty?
        %tr
          %td None
