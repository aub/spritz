#available-sections
  %h2 Available sections
  %ul
    - @available_section_types.each do |type|
      %li
        = type.section_name
        = link_to "New", admin_sections_path(:name => type.section_name), :method => :post
    
#active-sections
  %h2 Existing sections
  %ul
    - @sections.each do |section|
      %li
        = link_to section.title, :controller => section.admin_controller, :action => 'show', :id => section.id
        = link_to 'Delete', { :controller => section.admin_controller, :action => 'destroy', :id => section.id }, :method => :delete