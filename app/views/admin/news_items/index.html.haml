.box
  .boxheader
    %span.header News Items
    = link_to add_icon, new_admin_news_item_path
  %table.draglist{ :cellspacing => 0, :cellpadding => 0 }
    %tbody#newslist
      - @news_items.each do |news_item|
        %tr{ :id => "#{dom_id(news_item)}" }
          %td.small
            = image_tag('/images/icons/up-down.gif', :class => 'icon orange handle')
          %td.title= link_to news_item.title, edit_admin_news_item_path(news_item)
          %td.controls= link_to image_tag('/images/icons/trash.gif', :class => 'icon red', :title => 'Delete this item'), admin_news_item_path(news_item), :confirm => 'Are you sure you want to permanently delete this news item?', :method => :delete
      - if @news_items.empty?
        %tr
          %td None
