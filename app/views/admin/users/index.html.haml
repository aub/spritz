.box
  .boxheader
    %span.header Users
    = link_to add_icon, new_admin_user_path
  %table.draglist{ :cellpadding => 0, :cellspacing => 0 }
    %tbody#userlist
      - @users.each do |user|
        %tr
          %td
            %ol
              %li= link_to "#{user.login} (#{user.state})", edit_admin_user_path(user)
              %li.membership-data= membership_data(user)
              
          %td.controls= link_to image_tag('/images/icons/trash.gif', :class => 'icon red', :title => 'Delete this user'), admin_user_path(user), :confirm => 'Are you sure you want to mark this user as deleted?', :method => :delete
    
      - if @users.empty?
        %tr
          %td None
